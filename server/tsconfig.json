{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../provider-source/*"]
    }
  },
  "include": ["src/**/*", "../provider-source/**/*.ts"],
  "exclude": ["node_modules", "dist", "../provider-source/__test__/**/*", "../provider-source/dev-cli/**/*"]
}
