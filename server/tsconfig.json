{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../provider-source/*"]
    },
    "noImplicitAny": false
  },
  "include": ["src/**/*", "../provider-source/!(dev-cli|__test__)/**/*.ts"],
  "exclude": ["node_modules", "dist", "../provider-source/dev-cli/**/*", "../provider-source/__test__/**/*"]
}
